doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server side JavaScript
    ul
      each topic in topics
        li
          a(href='/topic/'+topic.id)= topic.title
    article
      form(action='/topic/'+topic.id+'/edit' method='post')
        p
          input(type='text' name='title' placeholder='제목' value=topic.title)
        p
          textarea(name='description' placeholder='내용')
            =topic.description
        p
          input(type='text' name='author' placeholder='저자' value=topic.author)
        p
          input(type='submit')
    ul
      li
        a(href='/topic/add') add
